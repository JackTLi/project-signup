<!DOCTYPE html>
<html>
<head>
  <title>ProjectSignup</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<div class="navbar-wrapper">
      <div class="container">

        <nav class="navbar navbar navbar-static-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to "Tryify", "/", class:"navbar-brand" %>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav navbar-right">
              	<% if current_user.present? %>
              	  <li class="dropdown navbar-right">
                  <a href="/products/new" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  	<img class="img-circle" src="<%= current_user.image %>">
                   <span class="caret"></span></a>
                  <ul class="dropdown-menu">

					<% if current_user.present? %>
					<li>
                    <%= link_to "Profile", "/products/new" %>
                    </li>
                    <li>
                    <%= link_to "Log off", session_path(1), method: 'delete' %>
                    </li>
                    <% end %>
                  </ul>
                </li>
              	<% else %>
              	<li>
			  		<%= link_to "Sign in with facebook", "/auth/facebook", id: "sign_in" %>
				</li>
				<% end %>


              </ul>
            </div>
          </div>
        </nav>

      </div>
    </div><%= render 'layouts/header' %>

<%= yield %>

</body>
</html>
