<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>

<%= form_for @product do |f| %>
<div style="max-width: 500px; margin: 0 auto;">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :title, class: 'validate' %>
        <label for="title">Title:</label>
      </div>
    </div>
    <%= f.hidden_field :vendor, value: current_user.name %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :price, class: 'validate' %>
        <label for="price">Price:</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :body_html, class:'materialize-textarea' %>
        <label for="description">Description:</label>
      </div>
    </div>
    <div class="row">
      <%= f.file_field :image, class:'sol s12' %>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <select class="js-example-basic-multiple js-states form-control" name="product[producttag_ids][]" id="simple-example" multiple="multiple"></select>
      </div>
    </div>
    <div class="row" style="text-align: center;" type="submit">
      <button>Submit</button>
    </div>
  </form>
</div>
<% end %>
