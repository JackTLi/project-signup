
  <div class="fixed-height">
  <div class="carousel fixed-height">
  		<% @products.each do |product| %>
			<a class="carousel-item" href="#one!">
				<img src="http://lorempixel.com/250/250/nature/1">
				<text>
				<h5 id="product-title"><%= product.title %></h5>
				<h7 id="product-vendor">
					by <%= product.vendor %>
				</h7>
				<br>
				<h7 id="product-body">
					<%= product.body_html %>
				</h7>
				</text>

			</a>
  		<% end %>
        
  </div>
  </div>