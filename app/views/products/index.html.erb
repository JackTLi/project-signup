<div class="fixed-height">
  <div class="carousel fixed-height">
  		<% @products.each do |product| %>
  		<a class="carousel-item" href="#">

  			<% if !(product.image.blank?) %>
  			<img src="<%= product.image %>" class="z-depth-5">
      <% else %>
        <img src="http://i3.cpcache.com/product/782244121/philosoraptor_tshirt.jpg?color=Black&height=460&width=460&qv=90" class="z-depth-5">
      <% end %>



    		<div class="carousel-description">
					

    		<button style="right: -240px;" class="btn waves-effect waves-light add-cart" data-id="<%=product.vid %>">Add to cart</button>
                <h5 id="product-title" style="margin-top:-15px;"><%= product.title %></h5>

          <p id="product-body">$<%= product.price %></p>
                
          <p id="product-vendor">By: <%= product.vendor %></p>
          <p id="product-body"><%= product.body_html %></p>

          	<button class="btn waves-effect waves-light add-cart" type="button">
                <%= product.likes.count %>
                <i class="material-icons">favorite</i>
                </button>

				</div>

  		</a>
  		<% end %>


  </div>

	 <!-- Modal Structure -->
  <div id="modal1" class="modal bottom-sheet">
    <div class="modal-content">
        <ul class="searchresults collection">
        </ul>
    </div>
  </div>



</div>


<script type="text/javascript">



  			  	$(document).ready(function() {

  			  		$('.carousel-item').children('.carousel-description').hide();
  			  		$('.carousel-item.active').children('.carousel-description').fadeIn();

  			  		$('.carousel').click(function() {
  			  			$('.carousel-item').children('.carousel-description').fadeOut();
  			  			setTimeout(function(){
								  $('.carousel-item.active').children('.carousel-description').fadeIn();
								}, 500);
  			  			
  			  		});

  			  		$('.add-cart').click(function() {
  			  			$.get( "http://waterloo-decode.myshopify.com/cart/add/" + $(this).data('id'), function( data ) {
								  $(this).html('');
	  			  			$(this).append('Added')
								});
  			  			
  			  		})

  			  	});
  			  
			  </script>
